        <Button Name="btnPoint" Content="." HorizontalAlignment="Left" Height="55" Margin="7,342,0,0" VerticalAlignment="Top" Width="58" Click="btnPoint_Click"/>
        <Button Name="btnPercent" Content="%" HorizontalAlignment="Left" Height="55" Margin="133,342,0,0" VerticalAlignment="Top" Width="58" Click="btnPersent_Click"/>
        <Button x:Name="btnAC" Content="AC" HorizontalAlignment="Left" Height="47" Margin="197,346,0,0" VerticalAlignment="Top" Width="46"/>

