        mc:Ignorable="d"
        Title="Számológép" Height="450" Width="300">
    <Grid>
        <Label Name="lblkijelzo" Content="0" HorizontalAlignment="Center" Height="88" Margin="0,36,0,0" VerticalAlignment="Top" Width="300" FontSize="45"/>
        <Button Name="btn7" Content="7" HorizontalAlignment="Left" Height="55" Margin="7,162,0,0" VerticalAlignment="Top" Width="58" Click="btn7_Click"/>
        <Button Name="btn8" Content="8" HorizontalAlignment="Left" Height="55" Margin="70,162,0,0" VerticalAlignment="Top" Width="58" Click="btn8_Click"/>
        <Button Name="btn9" Content="9" HorizontalAlignment="Left" Height="55" Margin="133,162,0,0" VerticalAlignment="Top" Width="58" Click="btn9_Click"/>
        <Button Name="btn6" Content="6" HorizontalAlignment="Left" Height="55" Margin="133,222,0,0" VerticalAlignment="Top" Width="58" Click="btn6_Click"/>
        <Button Name="btn5" Content="5" HorizontalAlignment="Left" Height="55" Margin="70,222,0,0" VerticalAlignment="Top" Width="58" Click="btn5_Click"/>
