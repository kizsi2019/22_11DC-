<Window x:Class="IskolaGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IskolaGUI"
        mc:Ignorable="d"
        Title="Iskola GUI" Height="550" Width="350">
    <Grid>
        <Button Name="btnTorles" Content="Törlés" HorizontalAlignment="Left" Margin="24,450,0,0" VerticalAlignment="Top" Height="25" Width="140" FontSize="14" Click="btnTorles_Click"/>
        <Button Name="btnMentes" Content="Állomány mentése" HorizontalAlignment="Left" Margin="175,450,0,0" VerticalAlignment="Top" Height="25" Width="140" FontSize="14" Click="btnMentes_Click"/>
        <ListBox Name="lstbNevek" HorizontalAlignment="Left" Height="380" Margin="24,30,0,0" VerticalAlignment="Top" Width="291" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="14" SelectionChanged="lstbNevek_SelectionChanged"/>
    </Grid>
</Window>
