<Window x:Class="iskolaGiiu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iskolaGiiu"
        mc:Ignorable="d"
        Title="IskolaG" Height="400" Width="350
        ">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Content="Törlés" HorizontalAlignment="Left" Height="30" Margin="32,303,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.516,1.767" Grid.ColumnSpan="2" Name="btn_Törlés"/>
        <Button Grid.Column="2" Content="Állomány mentése" HorizontalAlignment="Left" Height="30" Margin="158,303,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.516,1.767" Name="btn_Mentes"/>
        <ListBox Grid.Column="1" HorizontalAlignment="Left" Height="278" Margin="32,10,0,0" VerticalAlignment="Top" Width="286" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2" Name="mylistbox"/>
    </Grid>
</Window>
